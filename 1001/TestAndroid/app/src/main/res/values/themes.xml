<resources>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
<!--<item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar.Fullscreen</item>-->
    <style name="ThemeOverlay.Launcher3.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="base_view">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="white_text_32sp" parent="base_view">
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="white_text_30sp" parent="base_view">
        <item name="android:textSize">@dimen/_30sp</item>
    </style>

    <style name="white_text_24sp" parent="base_view">
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="white_text_20sp" parent="base_view">
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="white_text_18sp" parent="base_view">
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="gay_text_18sp" parent="base_view">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">#6C6C6C</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="orange_text_24sp" parent="base_view">
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
</resources>