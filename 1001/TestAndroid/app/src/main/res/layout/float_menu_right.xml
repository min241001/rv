<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:gravity="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/right_iv_menu_center"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/menu_center"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/right_iv_menu_one"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            app:layout_constrainedWidth="true"
            app:layout_constraintCircle="@id/right_iv_menu_center"
            app:layout_constraintCircleAngle="345"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constraintRight_toLeftOf="@+id/right_iv_menu_center"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/accept_deny_dialog_negative_bg" />

        <ImageView
            android:id="@+id/right_iv_menu_two"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            app:layout_constraintCircle="@id/right_iv_menu_center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="50dp"
            app:layout_constrainedWidth="true"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toLeftOf="@+id/right_iv_menu_center"
            tools:src="@drawable/accept_deny_dialog_negative_bg" />

        <ImageView
            android:id="@+id/right_iv_menu_three"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            app:layout_constrainedWidth="true"
            app:layout_constraintCircle="@id/right_iv_menu_center"
            app:layout_constraintCircleAngle="195"
            app:layout_constraintCircleRadius="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toLeftOf="@+id/right_iv_menu_center"
            tools:src="@drawable/accept_deny_dialog_negative_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

