<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <com.android.launcher3.widget.SlideSwitch
        android:id="@+id/ss_shutdown"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:icon="@drawable/icon_shutdown"
        app:text="@string/shutdown" />

    <com.android.launcher3.widget.SlideSwitch
        android:id="@+id/ss_reboot"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:icon="@drawable/icon_reboot"
        app:text="@string/reboot" />

    <com.android.launcher3.widget.SlideSwitch
        android:id="@+id/ss_sos"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:icon="@drawable/icon_sos"
        app:text="SOS" />

</LinearLayout>