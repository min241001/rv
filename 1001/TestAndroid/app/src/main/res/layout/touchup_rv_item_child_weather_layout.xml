<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/touchup_rv_item_child_weather"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_136dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tu_rv_weather_row_ll"
            android:layout_weight="7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tu_rv_weather_row_iv1"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_back"
                android:scaleType="fitCenter"
                android:layout_width="@dimen/d28"
                android:layout_height="@dimen/d28" />

            <TextView
                android:id="@+id/tu_rv_weather_row_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="32℃32℃32℃"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_below="@+id/tu_rv_weather_row_ll"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/text_color_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tu_rv_weather_column_1tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2dp"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

                <ImageView
                    android:id="@+id/tu_rv_weather_column_1iv1"
                    android:src="@mipmap/ic_back"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"></ImageView>

                <TextView
                    android:id="@+id/tu_rv_weather_column_1tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2dp"
                    android:textColor="@color/text_color_gray"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/text_color_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tu_rv_weather_column_2tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="@dimen/_2dp"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

                <ImageView
                    android:id="@+id/tu_rv_weather_column_2iv1"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"></ImageView>

                <TextView
                    android:id="@+id/tu_rv_weather_column_2tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="@dimen/_2dp"
                    android:textColor="@color/text_color_gray"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/text_color_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tu_rv_weather_column_3tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="@dimen/_2dp"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

                <ImageView
                    android:id="@+id/tu_rv_weather_column_3iv1"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"></ImageView>

                <TextView
                    android:id="@+id/tu_rv_weather_column_3tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:layout_weight="2"
                    android:layout_margin="@dimen/_2dp"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/text_color_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tu_rv_weather_column_4tv1"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

                <ImageView
                    android:id="@+id/tu_rv_weather_column_4iv1"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"></ImageView>

                <TextView
                    android:id="@+id/tu_rv_weather_column_4tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="@dimen/_2dp"
                    android:textColor="@color/text_color_gray"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/text_color_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tu_rv_weather_column_5tv1"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>

                <ImageView
                    android:id="@+id/tu_rv_weather_column_5iv1"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"></ImageView>

                <TextView
                    android:id="@+id/tu_rv_weather_column_5tv2"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:text="32℃"
                    android:textSize="@dimen/sp14"></TextView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/text_color_gray"></View>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>