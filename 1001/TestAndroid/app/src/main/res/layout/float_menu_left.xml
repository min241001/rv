<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/left_iv_menu_center"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/menu_center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/left_iv_menu_one"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            app:layout_constraintCircle="@id/left_iv_menu_center"
            app:layout_constraintCircleAngle="25"
            app:layout_constraintCircleRadius="50dp"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/accept_deny_dialog_negative_bg" />

        <ImageView
            android:id="@+id/left_iv_menu_two"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            app:layout_constraintCircle="@id/left_iv_menu_center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="50dp"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/accept_deny_dialog_negative_bg" />

        <ImageView
            android:id="@+id/left_iv_menu_three"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            app:layout_constraintCircle="@id/left_iv_menu_center"
            app:layout_constraintCircleAngle="165"
            app:layout_constraintCircleRadius="50dp"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/accept_deny_dialog_negative_bg" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
