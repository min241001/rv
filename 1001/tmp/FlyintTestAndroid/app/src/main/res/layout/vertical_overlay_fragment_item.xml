<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/vertical_overlay_item_plus_o"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/vertical_overlay_item_plus"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_background"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/vertical_overlay_item_plus_iv"
                android:layout_width="72dip"
                android:layout_height="72dip"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_plus"
                android:scaleType="fitCenter"
                android:src="@mipmap/content_new52" />
        </RelativeLayout>
    </RelativeLayout>
<!-- default-->
    <RelativeLayout
        android:id="@+id/item_card_rl_o"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/item_card_rl"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_vertical_fragment3"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/app_icon"
                android:textColor="@color/text_color_default"
                android:textSize="26sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_card_rv_del"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_clear_input_context"
            android:visibility="gone"></ImageView>

        <ImageView
            android:id="@+id/item_card_rv_up"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_overlay_vertical_item_top"
            android:visibility="gone"></ImageView>

        <!--android:visibility="gone"-->
    </RelativeLayout>
    <!--00002-->


    <RelativeLayout
        android:id="@+id/item_card_rl3_o"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/item_card_rl3"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_vertical_fragment3"
            android:elevation="8dp"
            android:gravity="center">

            <GridView
                android:id="@+id/item_gv"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:layout_marginLeft="20dip"
                android:background="@drawable/bg_vertical_fragment3"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:numColumns="3"></GridView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_card_rv_del2"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_overlay_vertical_item_top"
            android:visibility="gone"></ImageView>

        <ImageView
            android:id="@+id/item_card_rv_up2"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:src="@null"
            android:visibility="gone"></ImageView>

    </RelativeLayout>
    <!--0003-->
    <RelativeLayout
        android:id="@+id/item_card_rl2_o"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:elevation="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dip"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:background="@drawable/bg_vertical_fragment2">

            <ImageView
                android:id="@+id/vertical_overlay_iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="90dip"
                android:src="@mipmap/ic_popular_recommend"></ImageView>

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dip"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>