<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_oval_battery"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_oval_battery" />

        <ImageView
            android:id="@+id/iv_big_battery"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_big_charging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_progress"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.android.launcher3.common.widget.ProgressBarView
            android:id="@+id/progress"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:progress_radius="220dp"
            app:progress_reached_bar_height="18dp"
            app:progress_reached_color="#00FE18"
            app:progress_start="270"
            app:progress_unreached_bar_height="18dp"
            app:progress_unreached_color="#062F05" />

        <ImageView
            android:id="@+id/iv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_big_charging" />

    </RelativeLayout>
</RelativeLayout>