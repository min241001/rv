<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_marginTop="42dp"
        android:layout_marginStart="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.android.launcher3.common.widget.ProgressBarView
            android:id="@+id/progressBarVie"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:progress_radius="90dp"
            app:progress_reached_bar_height="8dp"
            app:progress_reached_color="#00FE18"
            app:progress_start="270"
            app:progress_unreached_bar_height="8dp"
            app:progress_unreached_color="#062F05" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_fast_charging" />

    </RelativeLayout>

    <com.android.launcher3.common.widget.PaddingTextClock
        android:id="@+id/tc_week"
        tools:text = "周三"
        android:textSize="22sp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/_00fe18"
        android:layout_alignParentEnd="true"
        android:format12Hour="EE"
        android:format24Hour="EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.android.launcher3.common.widget.PaddingTextClock
        android:id="@+id/tc_day"
        tools:text = "26"
        android:textSize="25sp"
        android:format12Hour="dd"
        android:format24Hour="dd"
        android:layout_marginEnd="13dp"
        android:layout_toLeftOf="@id/tc_week"
        android:textColor="@color/_00fe18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_charge"
        android:textSize="22sp"
        tools:text="电量17%"
        android:layout_marginEnd="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginEnd="19dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.android.launcher3.common.widget.PaddingTextClock
            android:id="@+id/tc_hour"
            tools:text = "09"
            android:textSize="90sp"
            android:textStyle="bold"
            android:format12Hour="HH"
            android:format24Hour="HH"
            android:layout_alignParentEnd="true"
            android:textColor="@color/_00fe18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_below="@id/tc_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.android.launcher3.common.widget.PaddingTextClock
                android:id="@+id/tc_minute"
                tools:text = "09"
                android:textSize="90sp"
                android:textStyle="bold"
                android:format12Hour="mm"
                android:format24Hour="mm"
                android:layout_alignParentEnd="true"
                android:textColor="@color/_00fe18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.android.launcher3.common.widget.PaddingTextView
                android:text=":"
                android:textSize="90sp"
                android:textStyle="bold"
                android:format12Hour=":"
                android:format24Hour=":"
                android:id="@+id/tc_colon"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tc_minute"
                android:textColor="@color/_00fe18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>