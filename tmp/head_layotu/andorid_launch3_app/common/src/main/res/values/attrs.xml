<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <!--自定义控件-->
    <declare-styleable name="RoundedButton">
        <attr name="rb_color" format="color|reference"/>
        <attr name="rb_alpha" format="integer"/>
        <attr name="rb_progress_color" format="color|reference"/>
        <attr name="rb_ring_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />
        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />
        <attr name="progress_radius" format="dimension" />
        <attr name="progress_start" format="float" />
    </declare-styleable>

</resources>