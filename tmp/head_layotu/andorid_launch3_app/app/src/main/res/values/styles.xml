<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/text_color_default</item>

        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景色透明 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 是否有透明属性 -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- 背景是否半透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- 状态栏透明 -->
<!--        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item> &lt;!&ndash; activity窗口切换效果 &ndash;&gt;-->

        <item name="android:windowNoTitle">true</item>

<!--        <item name="android:activityOpenEnterAnimation">@null</item>-->
<!--        <item name="android:activityOpenExitAnimation">@null</item>-->
<!--        <item name="android:activityCloseEnterAnimation">@null</item>-->
<!--        <item name="android:activityCloseExitAnimation">@null</item>-->
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="GlobalTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QSPanelTextSmallStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="QSPanelTextMidStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QSPanelTextBigStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ApplicationTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ApplicationContentTextStyle">
        <item name="android:textColor">#FF999999</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NotificationTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationContentTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--基础样式-->
    <style name="base_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#000000</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--主题的字体和颜色-->
    <style name="style_theme_font_color">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--计算器字体颜色-->
    <style name="style_calculator_font_color">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="black_text_20sp" parent="base_view">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--闹钟选择日期界面-->
    <style name="style_checkbox">
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:drawableEnd">@drawable/checked_selector_alarm</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <!-- 提示弹框 -->
    <style name="PromptDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dial_btn">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_dialer_item_gay</item>
    </style>

    <style name="dialer">
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--高斯模糊activity-->
    <style name="Theme.BlurryDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
