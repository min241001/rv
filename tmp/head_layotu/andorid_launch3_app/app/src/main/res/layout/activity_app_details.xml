<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_30dp"
    android:background="@drawable/bg1"
    android:elevation="1dp">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="@color/colorOverlay3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/apps_finish"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_finish"
                android:visibility="gone"></ImageView>

            <include
                android:id="@+id/app_details_head_layout"
                layout="@layout/app_details_head_layout" />

            <RelativeLayout
                android:id="@+id/tada_rl_o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35dp"
                android:layout_below="@+id/app_details_head_layout">

                <RelativeLayout
                    android:id="@+id/tada_rl"
                    android:layout_marginLeft="30dip"
                    android:layout_alignParentLeft="true"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hollow_circle">
                    <com.android.launcher3.moudle.touchup.view.CircleProgress
                        android:id="@+id/apd_circle_progress"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_centerInParent="true"
                        custom:donut_finished_color="@color/color_green"
                        custom:donut_finished_stroke_width="5dp"
                        android:backgroundTint="@color/color_green"
                        android:backgroundTintMode="add"
                        custom:donut_show_text="false"
                        android:elevation="1dp"
                        custom:donut_unfinished_color="@android:color/transparent"
                        custom:donut_unfinished_stroke_width="5dp"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/tada_iv"
                        android:layout_width="60dip"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="4dip"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        app:shapeAppearance="@style/CircleStyle"
                        app:shapeAppearanceOverlay="@drawable/bg_item_plus2"
                        app:strokeColor="@color/color_850000"
                        app:strokeWidth="4dp"
                        tools:ignore="MissingClass"></com.google.android.material.imageview.ShapeableImageView>
                    <!--android:padding="2dp"
                     app:shapeAppearanceOverlay="@drawable/ic_add_white_24dp"-->

                </RelativeLayout>


                <TextView
                    android:id="@+id/tada_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_30dp"
                    android:textSize="@dimen/sp14"></TextView>

            </RelativeLayout>
        </RelativeLayout>
    </eightbitlab.com.blurview.BlurView>

</RelativeLayout>
