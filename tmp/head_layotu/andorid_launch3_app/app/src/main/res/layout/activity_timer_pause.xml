<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/timer_back"
        android:background="@mipmap/ic_timer_back"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <ImageButton
        android:id="@+id/timer_add"
        android:background="@mipmap/ic_timer_add"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.android.launcher3.moudle.timer.custom.CustomView
        android:id="@+id/custom_view"
        android:layout_centerInParent="true"
        android:layout_width="266dp"
        android:layout_height="266dp" />



      <ImageButton
          android:id="@+id/timer_cancle"
          android:background="@mipmap/ic_timer_cancle"
          android:layout_marginBottom="@dimen/_20dp"
          android:layout_marginLeft="@dimen/_20dp"
          android:layout_alignParentBottom="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>


    <ImageButton
        android:id="@+id/timer_pause"
        android:background="@mipmap/ic_timer_pause"
        android:layout_marginBottom="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


      <TextView
          android:text="23:54"
          android:id="@+id/current_time"
          android:textSize="@dimen/_30sp"
          android:layout_centerInParent="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView
          android:text="@string/timer_minutes_30"
          android:layout_centerInParent="true"
          android:layout_alignTop="@+id/current_time"
          android:layout_margin="@dimen/_50dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>


</RelativeLayout>