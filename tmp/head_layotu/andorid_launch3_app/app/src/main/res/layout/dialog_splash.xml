<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_1_bg"
    android:paddingStart="20dp"
    android:paddingTop="8dp"
    android:paddingEnd="20dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@mipmap/splash_1_text"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:layout_alignStart="@id/iv_img"
        android:layout_alignEnd="@id/iv_img"
        android:layout_alignTop="@id/iv_img"
        android:gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:lineSpacingExtra="5dp"
        android:text="@string/splash_text_1" />

    <Button
        android:id="@+id/btn_binding"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_splash"
        android:gravity="center"
        android:text="@string/splash_binding"
        android:textColor="@color/color_fff7fc"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_splash"
        android:gravity="center"
        android:text="@string/splash_next"
        android:textColor="@color/color_fff7fc"
        android:textSize="20dp" />

</RelativeLayout>