<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:background="@color/black">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="@dimen/_5dp">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120dp"
                android:layout_marginTop="85dp"
                android:paddingStart="@dimen/_20dp"
                android:background="@drawable/bg_alarm_item"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bed_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_alarm_bed"
                    android:drawablePadding="12dp"
                    android:text="@string/alarm_getup"
                    android:textColor="@color/color_ffb400"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_bed_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="无起床"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_marginTop="25dp"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@mipmap/ic_alarm_add" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.baehug.toputils.view.TitleRelativeLayout
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shade_text_enable="true"
        app:left_text_size="18sp"
        app:left_title_text="@string/widget_alarm"
        app:right_text_size="12sp"
        app:right_title_text="@string/widget_alarm"
        app:text_color="@color/color_ffb400" />

</RelativeLayout>