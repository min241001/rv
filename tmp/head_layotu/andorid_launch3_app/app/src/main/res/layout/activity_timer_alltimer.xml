<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/_20dp"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:background="@mipmap/ic_timer_cancle"
                android:layout_marginLeft="@dimen/_20dp"
                android:id="@+id/Image_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.0"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_time"
                android:text="09:30"
                android:textSize="@dimen/_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/timer_app_name"
                android:textColor="#008AFF"
                android:textSize="@dimen/_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="@dimen/_10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


     <TextView
         android:id="@+id/tx_recently_used"
         android:visibility="gone"
         android:text="@string/timer_recently_used"
         android:textSize="@dimen/_30sp"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="@dimen/_20sp"
         android:layout_width="115dp"
         android:layout_height="35dp"/>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/layout_recently_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

              <ImageButton
                  android:layout_marginTop="@dimen/_10dp"
                  android:background="@mipmap/ic_timer_circle_dark"
                  android:id="@+id/Imgbtn_rencent_time"
                  android:layout_width="150dp"
                  android:layout_height="150dp"/>

                <TextView
                    android:id="@+id/tx_current_time"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:30:00" />

            </RelativeLayout>


           <TextView
                   android:text="@string/timer_all_timer"
                   android:textSize="@dimen/_30sp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="@dimen/_20sp"
                   android:layout_width="148dp"
                   android:layout_height="35dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageButton
                   android:id="@+id/btn_add"
                   android:background="@mipmap/ic_timer_circle"
                   android:layout_width="150dp"
                   android:layout_height="150dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <Button
                android:id="@+id/btn_edit"
                android:background="@drawable/rounded_background"
                android:text="@string/timer_edit"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>