<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".moudle.wallet.activity.WalletActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include android:visibility="gone" layout="@layout/no_network_layout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wallet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="西萌钱包"
                android:id="@+id/tv_moudle_name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/rl_user"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_moudle_name"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_theme"
                android:layout_width="match_parent"
                android:layout_height="95dp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:id="@+id/tv_waAcctId"
                    tools:text = "150111696"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="90dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_diamond"
                android:layout_marginTop="12dp"
                android:paddingTop="23dp"
                android:paddingStart="8dp"
                android:paddingEnd="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_user"
                app:layout_constraintRight_toLeftOf="@id/rl_integral"
                android:background="@drawable/ic_diamond"
                android:layout_width="0dp"
                android:layout_height="150dp">

                <TextView
                    android:text="萌钻"
                    android:textSize="17sp"
                    android:id="@+id/tv_diamondNum_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="0"
                    android:layout_marginTop="12dp"
                    android:id="@+id/tv_diamondNum"
                    android:textSize="19sp"
                    android:layout_below="@+id/tv_diamondNum_title"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:paddingTop="23dp"
                android:paddingStart="8dp"
                android:paddingEnd="20dp"
                android:id="@+id/rl_integral"
                android:layout_marginTop="12dp"
                android:layout_marginStart="14dp"
                app:layout_constraintLeft_toRightOf="@id/rl_diamond"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_user"
                android:background="@drawable/ic_integral"
                android:layout_width="0dp"
                android:layout_height="150dp">

                <TextView
                    android:text="积分"
                    android:textSize="17sp"
                    android:id="@+id/tv_integralNum_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="0"
                    android:layout_below="@+id/tv_integralNum_title"
                    android:id="@+id/tv_integralNum"
                    android:textSize="19sp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_buy"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/rl_diamond"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_theme"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_diamond"
                    android:layout_width="63dp"
                    android:layout_height="63dp"/>

                <TextView
                    android:text = "萌钻充值"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="80dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>