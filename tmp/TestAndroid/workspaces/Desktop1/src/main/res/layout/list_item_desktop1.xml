<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124.6dp"
    android:layout_gravity="center"
    android:gravity="center"
    tools:ignore="MissingConstraints,MissingDefaultResource">


        <LinearLayout
            android:id="@+id/fd11_menu_ll"
            android:layout_width="match_parent"
            android:layout_height="124.6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints,MissingDefaultResource">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/app_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:riv_corner_radius="10dp" />

            <com.android.launcher3.common.widget.MarqueTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/fd11_menu_rl"
        android:layout_width="@dimen/menu_w"
        android:layout_height="@dimen/menu_h"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="60dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_app_item"
        android:elevation="8dp">
        <!--          android:layout_alignParentTop="true"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menu_h"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fd11_menu_iv"
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_menu"></ImageView>
            <!--android:src="@drawable/ic_menu"-->

            <TextView
                android:id="@+id/fd11_menu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tvtvtv"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>