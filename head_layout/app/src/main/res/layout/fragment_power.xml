<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="20dp"
    android:orientation="vertical">
    
    <TextView
        android:text="@string/exit"
        android:id="@+id/tv_power_exit"
        android:paddingTop="22dp"
        android:paddingEnd="22dp"
        android:paddingStart="25dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textColor="#FF921B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextClock
        android:id="@+id/tv_power_time"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginTop="-10dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_power_exit"
        android:format12Hour="a hh:mm"
        android:format24Hour="HH:mm"
        tools:text="17:00" />

    <TextClock
        android:id="@+id/tv_power_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="EEEE"
        android:format24Hour="EEEE"
        tools:text="星期六"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginEnd="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_power_date"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/tv_power_time" />

    <TextClock
        android:id="@+id/tv_power_date"
        android:layout_marginStart="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="MM.dd"
        android:format24Hour="MM.dd"
        tools:text="03.26"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_power_week"
        app:layout_constraintTop_toBottomOf="@+id/tv_power_time" />

    <TextView
        android:id="@+id/tv_power_value"
        tools:text = "超级省电中60%"
        android:textColor="#555555"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_power_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_dialer"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_dialer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_message"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="85dp"
        android:background="@drawable/ic_message"
        app:layout_constraintStart_toEndOf="@id/iv_dialer"
        app:layout_constraintEnd_toStartOf="@id/iv_contact"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_marginEnd="15dp"
        android:id="@+id/iv_contact"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="@drawable/ic_contacts"
        app:layout_constraintStart_toEndOf="@id/iv_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>