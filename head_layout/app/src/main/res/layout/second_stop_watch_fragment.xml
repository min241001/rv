<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_stop_watch_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal">

        <com.android.launcher3.moudle.stopwatch.view.TimeMinuteView
            android:id="@+id/time1"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            custom:borderColor="#d3d3d3"
            custom:borderWidth="4dp"
            custom:centerPointColor="#d3d3d3"
            custom:centerPointRadiu="2dp"
            custom:centerPointType="circle"
            custom:circleBackground="#d3d3d3"
            custom:isSecondGoSmooth="false"
            custom:maxScaleColor="#000000"
            custom:maxScaleLength="8dp"
            custom:midScaleColor="#a1a1a1"
            custom:midScaleLength="8dp"
            custom:minPointerColor="#ff5603"
            custom:minPointerLength="20dp"
            custom:minScaleColor="#a1a1a1"
            custom:minScaleLength="4dp"
            custom:textColor="#000000"
            custom:textSize="8sp" />

        <com.android.launcher3.moudle.stopwatch.view.TimeSecondsView
            android:id="@+id/time2"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:borderColor="#d3d3d3"
            custom:borderWidth="4dp"
            custom:centerPointColor="#d3d3d3"
            custom:centerPointRadiu="2dp"
            custom:centerPointType="circle"
            custom:circleBackground="#d3d3d3"
            custom:isSecondGoSmooth="true"
            custom:maxScaleColor="#232323"
            custom:maxScaleLength="8dp"
            custom:minScaleColor="#a1a1a1"
            custom:minScaleLength="4dp"
            custom:secondPointerColor="#ff5603"
            custom:secondPointerLength="5dp"
            custom:textColor="#000000"
            custom:textSize="8sp" />

        <com.android.launcher3.moudle.stopwatch.view.TimeMilliSecondView
            android:id="@+id/time3"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            custom:borderColor="#d3d3d3"
            custom:borderWidth="4dp"
            custom:centerPointColor="#d3d3d3"
            custom:centerPointRadiu="2dp"
            custom:centerPointType="circle"
            custom:circleBackground="#d3d3d3"
            custom:isSecondGoSmooth="false"
            custom:maxScaleColor="#232323"
            custom:maxScaleLength="8dp"
            custom:minScaleColor="#a1a1a1"
            custom:minScaleLength="4dp"
            custom:secondPointerColor="#ff5603"
            custom:secondPointerLength="5dp"
            custom:textColor="#000000"
            custom:textSize="8sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_stop_watch_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="00:00.00"
        android:textColor="@color/black"
        android:textSize="40sp" />

</RelativeLayout>