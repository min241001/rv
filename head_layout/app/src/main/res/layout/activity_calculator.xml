<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <Button
        android:id="@+id/btn_ac"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_calculator_ac"
        android:text="AC"
        app:layout_constraintBottom_toTopOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@+id/btn_del"
        app:layout_constraintStart_toStartOf="@id/btn_7"
        app:rippleColor="#CB0808"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_del"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_calculator_ac"
        android:text="CE"
        app:layout_constraintEnd_toStartOf="@+id/btn_div"
        app:layout_constraintStart_toEndOf="@+id/btn_ac"
        app:layout_constraintTop_toTopOf="@+id/btn_ac"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_div"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_calculator_chu"
        android:text="รท"
        app:layout_constraintEnd_toStartOf="@id/btn_mul"
        app:layout_constraintStart_toEndOf="@+id/btn_del"
        app:layout_constraintTop_toTopOf="@+id/btn_del"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_mul"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_calculator_chu"
        android:text="ร"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_div"
        app:layout_constraintTop_toTopOf="@+id/btn_div"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_7"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_calculator_1"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/btn_8"
        app:layout_constraintStart_toStartOf="@+id/btn_4"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_8"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_1"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_del"
        app:layout_constraintTop_toTopOf="@+id/btn_7"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_9"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_1"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        app:layout_constraintStart_toEndOf="@+id/btn_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_mul"
        app:layout_constraintTop_toTopOf="@+id/btn_7"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_add"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_chu"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        app:layout_constraintTop_toBottomOf="@+id/btn_div"
        app:layout_constraintTop_toTopOf="@+id/btn_7"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_4"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_calculator_1"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_5"
        app:layout_constraintStart_toStartOf="@+id/btn_1"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_5"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_1"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_8"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_6"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_1"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@id/btn_jian"
        app:layout_constraintStart_toEndOf="@+id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_9"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_jian"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_chu"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_add"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_1"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_calculator_1"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/btn_0"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        app:layout_constraintStart_toStartOf="@+id/btn_0"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_2"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_1"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_3"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_1"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@id/btn_equal"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_equal"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_calculator_chu"
        android:text="="
        app:layout_constraintBottom_toBottomOf="@+id/btn_sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_0"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_calculator_1"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_sub"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/btn_sub"
        style="@style/style_calculator_font_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculator_high_margin"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_calculator_1"
        android:text="."
        app:layout_constraintEnd_toStartOf="@+id/btn_equal"
        app:layout_constraintStart_toStartOf="@id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/btn_0"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAlignment="textEnd"
        android:gravity="end|bottom"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/btn_ac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>