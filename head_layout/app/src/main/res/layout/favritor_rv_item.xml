<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layout_width="90dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/vertical_overlay_item_plus_o"
        android:layout_centerInParent="true"
        android:background="@drawable/hollow_circle"
        android:layout_width="76dp"
        android:layout_height="76dp">
        <com.android.launcher3.moudle.touchup.view.CircleProgress
            android:id="@+id/fav_rv_item_circle_progress"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            custom:donut_finished_color="@color/color_green"
            custom:donut_finished_stroke_width="5dp"
            android:backgroundTint="@color/color_green"
            android:backgroundTintMode="add"
            custom:donut_show_text="false"
            android:elevation="1dp"
            custom:donut_unfinished_color="@android:color/transparent"
            custom:donut_unfinished_stroke_width="5dp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fav_rv_item_iv"
            android:layout_width="72dip"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:layout_margin="4dip"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@drawable/bg_item_plus2"
            app:shapeAppearance="@style/CircleStyle"
            app:strokeColor="@color/color_850000"
            app:strokeWidth="4dp"
            tools:ignore="MissingClass"></com.google.android.material.imageview.ShapeableImageView>
        <!-- android:background="@mipmap/ic_plus36"-->
        <ImageView
            android:src="@mipmap/ic_plus36"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"></ImageView>
        <!--android:padding="2dp"
         app:shapeAppearanceOverlay="@drawable/ic_add_white_24dp"-->

    </RelativeLayout>

    <ImageView
        android:id="@+id/fav_rv_item__del"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_del"
        android:visibility="gone"
        tools:ignore="MissingClass"></ImageView>

    <!-- android:layout_toLeftOf="@+id/item_card_gv_iv"
            android:layout_above="@+id/item_card_gv_iv"-->
</RelativeLayout>