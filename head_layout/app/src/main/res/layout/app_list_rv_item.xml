<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/app_list_item_rv"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_app_item"
        android:elevation="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/app_list_item_iv"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:shapeAppearance="@style/CircleStyle"
            app:shapeAppearanceOverlay="@drawable/bg_item_plus2"
            app:strokeColor="@color/color_850000"
            app:strokeWidth="4dp"
            tools:ignore="MissingClass"></com.google.android.material.imageview.ShapeableImageView>
        <!--android:padding="2dp"-->
        <TextView
            android:layout_toRightOf="@+id/app_list_item_iv"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/_10dp"
            android:id="@+id/app_list_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <!-- android:layout_toLeftOf="@+id/item_card_gv_iv"
                android:layout_above="@+id/item_card_gv_iv"-->
    </RelativeLayout>
</RelativeLayout>