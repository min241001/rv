<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_size"
    android:layout_height="@dimen/item_size">

    <com.android.launcher3.common.widget.CircleImageView
        android:id="@+id/item_round"
        android:visibility="gone"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size" />
    <RelativeLayout
        android:id="@+id/fd22_menu_ll"
        android:layout_width="@dimen/menu_w"
        android:layout_height="@dimen/menu_h"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="60dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_app_item"
        android:elevation="8dp">
        <!--          android:layout_alignParentTop="true"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menu_h"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fd22_menu_iv"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_menu"></ImageView>
            <!--android:src="@drawable/ic_menu"-->

            <TextView
                android:id="@+id/fd22_menu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tvtvtv"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
