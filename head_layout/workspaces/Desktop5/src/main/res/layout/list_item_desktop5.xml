<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fd55_item_ll"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/app_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:riv_corner_radius="18dp" />

        <com.android.launcher3.common.widget.MarqueTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="2dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fd55_menu_rl"
        android:layout_marginTop="@dimen/_18dp"
        android:layout_marginBottom="@dimen/margin_size_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_h"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="@dimen/menu_w"
            android:layout_height="@dimen/menu_h"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_app_item"
            android:elevation="8dp">
            <!--          android:layout_alignParentTop="true"-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/menu_h"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fd55_menu_iv"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu"></ImageView>
                <!--android:src="@drawable/ic_menu"-->

                <TextView
                    android:id="@+id/fd55_menu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:text="tvtvtv"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>