<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Dial3TimeHStyle">
        <item name="android:textColor">#00FFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40.88sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Dial3TimeMStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40.88sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Dial3TimeAStyle">
        <item name="android:textColor">#FF00FFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13.67sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Dial3DateStyle">
        <item name="android:textColor">#FF00FFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22.21sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Dial3WeekStyle">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15.38sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Dial3BatteryTextStyle">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19.91sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="Dial3RateTextStyle">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
</resources>
